# PostgreSQL
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DATABASE=appdb

# Trino (for BENCH_MODE=trino)
TRINO_HOST=localhost
TRINO_PORT=8080
TRINO_CATALOG=postgres
TRINO_SCHEMA=bench
TRINO_USER=trino

# Benchmark mode: postgres | trino
BENCH_MODE=postgres

# Batch and limits (defaults: 100M batch, 500M max)
BATCH_SIZE=100000000
RECORD_MAX=500000000

# Table variant for setup/bench: plain | part | idx | idx_part
TABLE_VARIANT=plain

# API server (for K6 insert-one test)
API_PORT=3000

# PostgreSQL data directory on host (for docker-compose bind mount)
# Windows: E:\PostgreSQL_data
PG_DATA_PATH=E:/PostgreSQL_data
